public class Contas {
    
    private double num1;
    private double num2;

    //Construtor
    public Contas(){
        this(0, 0);
    }
    //Metodo Recebendo Numeros
    public Contas(double num1,double num2){
        this.num1=num1;
        this.num2=num2;
    }
    //Metodos de Calculo para os Botões Radio.
    public String somar(){
        return "A soma dos numeros é: "+(getNum1()+getNum2());
    }
    public String subtrair(){
        return "A soma dos numeros é: "+(getNum1()-getNum2());
    }
    public String multiplicar(){
        return "A soma dos numeros é: "+(getNum1()*getNum2());
    }
    public String dividir(){
        return "A soma dos numeros é: "+(getNum1()/getNum2());
    }
    
    
    /**
     * @return the num1
     */
    public double getNum1() {
        return num1;
    }
    /**
     * @param num1 the num1 to set
     */
    public void setNum1(double num1) {
        this.num1 = num1;
    }
    /**
     * @return the num2
     */
    public double getNum2() {
        return num2;
    }
    /**
     * @param num2 the num2 to set
     */
    public void setNum2(double num2) {
        this.num2 = num2;
    }
    
}
